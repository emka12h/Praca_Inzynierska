@page
@model GlamStudio.Pages.ContactModel
@{
    ViewData["Title"] = "Kontakt";
}

<div class="container mt-5 mb-5">
    <div class="row align-items-center">

        <div class="col-lg-6 logo-main-container">
            <img src="~/images/logo.png" alt="Glam Studio Logo Główne" class="img-fluid" />
        </div>

        <div class="col-lg-6">
            <div class="contact-form-wrapper">
                <h3>Skontaktuj się z nami!</h3>
                <p>Jeśli masz pytania na temat zabiegu, przebiegu wizyty - napisz do nas! Odpowiemy na wszystkie Twoje pytania.</p>

                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="mb-3">
                        <label asp-for="Input.Email" class="form-label">Adres email*</label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.Message" class="form-label">Treść wiadomości*</label>
                        <textarea asp-for="Input.Message" class="form-control" rows="5"></textarea>
                        <span asp-validation-for="Input.Message" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-glam-pink">Wyślij wiadomość</button>
                </form>
            </div>
        </div>

    </div>
</div>
