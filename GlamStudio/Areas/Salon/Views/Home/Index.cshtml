@{
    ViewData["Title"] = "Panel Salonu";
    bool isAdmin = User.IsInRole("Admin");
}

<div class="salon-dashboard-wrapper">
    <div class="container py-0">
        <div class="row g-4 g-lg-5">

            <div class="col-md-6">
                <div class="dashboard-card shadow-sm">
                    <h5 class="dashboard-title">@(isAdmin ? "Pracownicy" : "Mój Grafik")</h5>
                    <ul>
                        <li><a asp-area="Salon" asp-controller="WorkSchedules" asp-action="Index">Grafik pracy</a></li>

                        @if (isAdmin)
                        {
                            <li><a asp-area="Salon" asp-controller="Employees" asp-action="Index">Dane o pracownikach</a></li>
                        }
                    </ul>
                    <div class="dashboard-link">
                        <a asp-area="Salon" asp-controller="WorkSchedules" asp-action="Index">ZOBACZ</a>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="dashboard-card shadow-sm">
                    <h5 class="dashboard-title">Wizyty</h5>
                    <ul>
                        <li><a asp-area="Salon" asp-controller="Appointments" asp-action="Index">Lista wizyt</a></li>
                        <li><a asp-area="Salon" asp-controller="Appointments" asp-action="Create">Umów wizytę (Ręcznie)</a></li>
                    </ul>
                    <div class="dashboard-link">
                        <a asp-area="Salon" asp-controller="Appointments" asp-action="Index">ZOBACZ</a>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="dashboard-card shadow-sm">
                    <h5 class="dashboard-title">Baza klientów</h5>
                    <ul>
                        <li><a asp-area="Salon" asp-controller="Clients" asp-action="Index">Lista klientów</a></li>
                        <li><a asp-area="Salon" asp-controller="Clients" asp-action="Create">Dodaj nowego klienta</a></li>
                    </ul>
                    <div class="dashboard-link">
                        <a asp-area="Salon" asp-controller="Clients" asp-action="Index">ZOBACZ</a>
                    </div>
                </div>
            </div>

            @if (isAdmin)
            {
                <div class="col-md-6">
                    <div class="dashboard-card shadow-sm">
                        <h5 class="dashboard-title">Salon i Oferta</h5>
                        <ul>
                            <li><a asp-area="Salon" asp-controller="Services" asp-action="Create">Dodaj usługę</a></li>
                            <li><a asp-area="Salon" asp-controller="Services" asp-action="Index">Edycja oferty</a></li>
                        </ul>
                        <div class="dashboard-link">
                            <a asp-area="Salon" asp-controller="Services" asp-action="Index">ZOBACZ</a>
                        </div>
                    </div>
                </div>
            }

            @if (isAdmin)
            {
                <div class="col-md-6">
                    <div class="dashboard-card shadow-sm">
                        <h5 class="dashboard-title">Raporty i Statystyki</h5>
                        <ul>
                            <li><a asp-area="Salon" asp-controller="Reports" asp-action="ServiceReports">Raporty o usługach</a></li>
                            <li><a asp-area="Salon" asp-controller="Reports" asp-action="MonthlyStats">Statystyki miesięczne</a></li>
                        </ul>
                        <div class="dashboard-link">
                            <a asp-area="Salon" asp-controller="Reports" asp-action="ServiceReports">ZOBACZ</a>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</div>

<style>
    body {
        background-color: #F8F9FA;
    }

    .salon-dashboard-wrapper {
        background-color: #C29E97;
        margin-top: 60px;
        display: flex;
        justify-content: center;
        position: relative;
        padding-bottom: 0;
    }

        .salon-dashboard-wrapper .container {
            max-width: 1200px;
            margin: 0 auto;
        }

    .dashboard-card {
        background-color: #F8F6F3;
        padding: 2.5rem 3rem;
        height: 100%;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.08);
        position: relative;
        overflow: visible;
        border: 1px solid rgba(0, 0, 0, 0.05);
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        transition: none;
        top: -30px;
        bottom: -30px;
        z-index: 2;
    }

    .dashboard-title {
        font-weight: 500;
        font-size: 2.5rem;
        color: #333;
        margin-bottom: 2.5rem;
    }

    .dashboard-card ul {
        list-style: none;
        padding: 0;
        margin: 0;
        flex-grow: 1;
    }

        .dashboard-card ul li a {
            color: #555;
            text-decoration: none;
            font-size: 1.1rem;
            line-height: 2;
            display: block;
            transition: color 0.2s ease;
        }

            .dashboard-card ul li a:hover {
                color: #C5A09A;
                padding-left: 5px;
            }

    .dashboard-link {
        text-align: right;
        margin-top: 3rem;
    }

        .dashboard-link a {
            text-decoration: none;
            font-weight: 700;
            color: #3E3E3E;
            font-size: 1rem;
            letter-spacing: 0.5px;
            padding-right: 40px;
            position: relative;
            display: inline-block;
        }

            .dashboard-link a::before {
                content: '';
                position: absolute;
                bottom: 0;
                left: -80px;
                right: 25px;
                height: 1px;
                border-bottom: 2px dotted #C29E97;
            }

            .dashboard-link a::after {
                content: '\2190';
                position: absolute;
                right: 0;
                top: 50%;
                transform: translateY(-50%) scale(1.1);
                font-weight: bold;
                color: #C29E97;
                transition: transform 0.3s;
            }

            .dashboard-link a:hover {
                color: #A47E78;
            }

                .dashboard-link a:hover::after {
                    transform: translateY(-50%) translateX(-4px) scale(1.1);
                }

    @@media (max-width: 991.98px) {
        .salon-dashboard-wrapper {
            background-color: transparent;
            margin-top: 1rem;
            display: block;
            padding: 0 15px;
        }

        .dashboard-card {
            top: 0;
            bottom: 0;
            padding: 1.5rem;
            border-radius: 12px;
            margin-bottom: 1rem;
            border-top: 5px solid #C29E97;
        }

        .dashboard-title {
            font-size: 1.5rem;
            margin-bottom: 1.5rem;
            font-weight: 600;
        }

        .dashboard-card ul li a {
            font-size: 1rem;
            padding: 10px 0;
            border-bottom: 1px solid #eee;
        }

        .dashboard-card ul li:last-child a {
            border-bottom: none;
        }

        .dashboard-link {
            margin-top: 1.5rem;
            text-align: right;
        }


            .dashboard-link a::before {
                left: -20px;
                right: 25px;
            }
    }
</style>