@model GlamStudio.Models.ApplicationUser

@{
    ViewData["Title"] = "Usuń pracownika";
    Layout = "~/Areas/Salon/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger shadow">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="fas fa-user-times me-2"></i>Potwierdzenie usunięcia</h4>
                </div>
                <div class="card-body text-center py-4">
                    <h3 class="text-danger mb-4">Czy na pewno chcesz usunąć tego pracownika?</h3>

                    <div class="mb-4">
                        <i class="fas fa-user-circle fa-5x text-secondary mb-3"></i>
                        <h4 class="fw-bold">@Model.FirstName @Model.LastName</h4>
                        <p class="text-muted">@Model.Email</p>

                        @if (Model.Specializations != null && Model.Specializations.Any())
                        {
                            <p>
                                Przypisane specjalizacje:
                                <strong>@Model.Specializations.Count</strong>
                            </p>
                        }
                    </div>

                    <div class="alert alert-warning text-start d-inline-block">
                        <strong>Ostrzeżenie:</strong>
                        <ul class="mb-0">
                            <li>Użytkownik straci dostęp do panelu pracownika.</li>
                            <li>Zostanie usunięty z grafików pracy.</li>
                            <li>Operacja jest nieodwracalna.</li>
                        </ul>
                    </div>

                    <form asp-action="Delete" class="mt-4">
                        <input type="hidden" asp-for="Id" />
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-secondary px-4 me-2">Anuluj</a>
                        <button type="submit" class="btn btn-danger px-4">
                            <i class="fas fa-trash-alt me-2"></i> Potwierdzam usunięcie
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>