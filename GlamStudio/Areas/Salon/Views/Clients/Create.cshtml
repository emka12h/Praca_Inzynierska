@model GlamStudio.Areas.Salon.Models.ClientCreateViewModel

@{
    ViewData["Title"] = "Dodaj Klienta";
    Layout = "~/Areas/Salon/Views/Shared/_Layout.cshtml";
}

<style>
    .form-card {
        background: #ffffff;
        border-radius: 12px;
        padding: 2rem;
        box-shadow: 0 4px 15px rgba(0,0,0,0.05);
    }

    @@media (max-width: 767.98px) {
        .container {
            padding-left: 15px;
            padding-right: 15px;
        }

        .form-card {
            padding: 1.5rem 1rem;
        }

        h2 {
            font-size: 1.5rem;
        }

        .action-buttons {
            display: flex;
            flex-direction: column;
            gap: 12px;
        }

            .action-buttons .btn {
                width: 100%;
                padding: 12px;
                font-size: 1rem;
            }
    }
</style>

<div class="container pb-5">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">

            <div class="d-flex align-items-center mb-3 mt-3">
                <h2 class="mb-0">Dodaj Nowego Klienta</h2>
            </div>

            <div class="alert alert-info shadow-sm mb-4">
                <div class="d-flex">
                    <div class="me-3">
                        <i class="fas fa-key fa-2x"></i>
                    </div>
                    <div>
                        <strong>Informacja o haśle:</strong><br />
                        Hasło dla klienta zostanie wygenerowane automatycznie i wyświetlone na ekranie po zapisaniu formularza.
                    </div>
                </div>
            </div>

            <div class="form-card">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <h5 class="text-muted mb-3 border-bottom pb-2"><i class="fas fa-user me-2"></i>Dane podstawowe</h5>
                    <div class="row">
                        <div class="col-12 col-md-6 mb-3">
                            <label asp-for="FirstName" class="form-label fw-bold">Imię*</label>
                            <input asp-for="FirstName" class="form-control form-control-lg" placeholder="np. Anna" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="col-12 col-md-6 mb-3">
                            <label asp-for="LastName" class="form-label fw-bold">Nazwisko*</label>
                            <input asp-for="LastName" class="form-control form-control-lg" placeholder="np. Kowalska" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>

                    <h5 class="text-muted mb-3 border-bottom pb-2 mt-2"><i class="fas fa-address-book me-2"></i>Kontakt</h5>
                    <div class="row">
                        <div class="col-12 col-md-6 mb-3">
                            <label asp-for="Email" class="form-label fw-bold">Email (Login)*</label>
                            <input asp-for="Email" type="email" class="form-control" placeholder="klient@email.com" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="col-12 col-md-6 mb-3">
                            <label asp-for="PhoneNumber" class="form-label fw-bold">Telefon</label>
                            <input asp-for="PhoneNumber" type="tel" class="form-control" placeholder="np. 123 456 789" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12 col-md-8 mb-3">
                            <label asp-for="Address" class="form-label">Adres</label>
                            <input asp-for="Address" class="form-control" placeholder="Ulica i numer" />
                        </div>
                        <div class="col-12 col-md-4 mb-3">
                            <label asp-for="City" class="form-label">Miasto</label>
                            <input asp-for="City" class="form-control" placeholder="Miasto" />
                        </div>
                    </div>

                    <div class="mb-4">
                        <label asp-for="SalonNotes" class="form-label fw-bold text-primary">
                            <i class="fas fa-sticky-note me-1"></i> Notatki Salonu
                        </label>
                        <textarea asp-for="SalonNotes" class="form-control" rows="4" placeholder="Wpisz tutaj uczulenia, preferencje kawowe, historię zabiegów... (Widoczne tylko dla pracowników)"></textarea>
                    </div>

                    <div class="action-buttons mt-4">
                        <button type="submit" class="btn btn-primary btn-lg shadow-sm">
                            <i class="fas fa-save me-2"></i> Stwórz konto klienta
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                            Anuluj
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}