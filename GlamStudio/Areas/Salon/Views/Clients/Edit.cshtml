@model GlamStudio.Models.ApplicationUser

@{
    ViewData["Title"] = "Edycja Klienta";
    Layout = "~/Areas/Salon/Views/Shared/_Layout.cshtml";
}

<style>

    .btn-glam-pink {
        background-color: #E8C2C6;
        color: #4D4C4A;
        border: none;
        font-weight: 600;
        transition: 0.3s ease;
        padding: 12px 20px;
    }

        .btn-glam-pink:hover {
            background-color: #d4a6ab;
            color: #222;
        }

    @@media (max-width: 767.98px) {
        .container {
            padding-left: 15px;
            padding-right: 15px;
            margin-top: 1rem !important;
        }

        .card {
            border: none !important;
            box-shadow: none !important;
            background: transparent !important;
        }

        .card-header {
            background: transparent !important;
            padding-left: 0;
            border-bottom: 2px solid #f0f0f0;
            margin-bottom: 1rem;
            font-size: 1.1rem;
        }

        .card-body {
            padding: 0 !important;
        }

        h1 {
            font-size: 1.6rem;
        }

        h4 {
            font-size: 1.1rem;
        }

        .form-select, .form-control-lg, .form-control {
            font-size: 16px;
            padding: 12px;
            border-radius: 10px;
        }

        .action-buttons {
            flex-direction: column;
            gap: 10px;
        }

            .action-buttons .btn {
                width: 100%;
                padding: 12px;
            }

        .order-mobile-1 {
            order: 1;
        }

        .order-mobile-2 {
            order: 2;
        }
    }
</style>

<div class="container-fluid px-4">
    <h1 class="mt-4">Edycja danych klienta</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-action="Index">Baza Klientów</a></li>
        <li class="breadcrumb-item active">Edycja</li>
    </ol>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-white py-3">
                    <h5 class="m-0 font-weight-bold text-secondary">
                        <i class="fas fa-user-edit me-2"></i> @Model.FirstName @Model.LastName
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />

                        <h6 class="text-muted text-uppercase mb-3 fw-bold small">Dane kontaktowe</h6>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-floating mb-3 mb-md-0">
                                    <input asp-for="FirstName" class="form-control" placeholder="Imię" />
                                    <label asp-for="FirstName">Imię</label>
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="LastName" class="form-control" placeholder="Nazwisko" />
                                    <label asp-for="LastName">Nazwisko</label>
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-floating mb-3 mb-md-0">
                                    <input asp-for="Email" class="form-control" placeholder="name@example.com" />
                                    <label asp-for="Email">Adres Email</label>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="PhoneNumber" class="form-control" placeholder="Telefon" />
                                    <label asp-for="PhoneNumber">Numer telefonu</label>
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-12">
                                <div class="form-floating">
                                    <input asp-for="City" class="form-control" placeholder="Miasto" />
                                    <label asp-for="City">Miasto</label>
                                    <span asp-validation-for="City" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <hr class="my-4" />

                        <div class="bg-light p-3 rounded border">
                            <h6 class="text-danger text-uppercase mb-3 fw-bold small">
                                <i class="fas fa-lock me-1"></i> Strefa pracownika (CRM)
                            </h6>

                            <div class="mb-3">
                                <label asp-for="SalonNotes" class="form-label fw-semibold">Wewnętrzne notatki o kliencie</label>
                                <textarea asp-for="SalonNotes" class="form-control" rows="6"
                                          placeholder="Wpisz tutaj informacje o alergiach, preferencjach kawowych, ulubionych tematach rozmów lub historii zabiegów..."></textarea>
                                <span asp-validation-for="SalonNotes" class="text-danger"></span>
                                <div class="form-text text-muted">
                                    <i class="fas fa-info-circle"></i> Te informacje są widoczne <strong>tylko</strong> dla pracowników salonu. Klient ich nie zobaczy.
                                </div>
                            </div>
                        </div>

                        <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                            <a asp-action="Index" class="btn btn-link text-decoration-none text-secondary">
                                <i class="fas fa-arrow-left"></i> Powrót do listy
                            </a>
                            <button type="submit" class="btn btn-primary px-4 py-2">
                                <i class="fas fa-save me-2"></i> Zapisz zmiany
                            </button>
                        </div>
                    </form>
                    <div class="mt-5 pt-4 border-top">
                        <h6 class="text-danger fw-bold text-uppercase small">
                            <i class="fas fa-exclamation-triangle me-1"></i> Strefa niebezpieczna
                        </h6>
                        <div class="d-flex align-items-center justify-content-between flex-wrap bg-danger bg-opacity-10 p-3 rounded mt-2">
                            <div>
                                <span class="fw-bold text-danger d-block">Usuwanie konta klienta</span>
                                <small class="text-muted">Ta operacja jest nieodwracalna. Klient straci dostęp do swojego panelu.</small>
                            </div>
                            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger btn-sm mt-2 mt-sm-0">
                                <i class="fas fa-trash-alt me-2"></i> Usuń to konto
                            </a>
                        </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
