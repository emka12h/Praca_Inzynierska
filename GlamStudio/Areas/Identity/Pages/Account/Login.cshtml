@page
@model GlamStudio.Areas.Identity.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Logowanie";
    var isSalon = Model.LoginType == "salon";
}

<div class="container mt-5 mb-5">
    <div class="row align-items-center">
        <div class="col-lg-6 logo-main-container">
            <img src="~/images/logo.png" alt="Glam Studio Logo" class="img-fluid" />
        </div>

        <div class="col-lg-6">
            <div class="login-form-wrapper">
                <h3>
                    @if (isSalon)
                    {
                        @:Zaloguj się do panelu salonu
                    }
                    else
                    {
                        @:Zaloguj się do GlamStudio!
                    }
                </h3>

                <p>
                    @if (isSalon)
                    {
                        <text>Aby przejść do panelu salonu, wpisz dane logowania.</text>
                    }
                    else
                    {
                        <text>
                            Jeśli nie masz jeszcze konta -
                            <a asp-page="./Register" asp-route-type="client" class="glam-link">Zarejestruj się</a>
                        </text>
                    }
                </p>

                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="mb-3">
                        <label asp-for="Input.Email" class="form-label">Login*</label>
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.Password" class="form-label">Hasło*</label>
                        <input asp-for="Input.Password" class="form-control" type="password" autocomplete="current-password" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-glam-pink">Zaloguj się</button>

                    @if (!isSalon)
                    {
                        <div class="mt-3 text-center">
                            <p>
                                <a asp-page="./ForgotPassword" class="glam-link">Nie pamiętasz hasła?</a>
                            </p>
                        </div>
                    }
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
