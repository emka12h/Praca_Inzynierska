@model GlamStudio.Areas.Client.Models.ChangePasswordViewModel
@{
    ViewData["Title"] = "Zmiana hasła";
    Layout = "~/Areas/Client/Views/Shared/_Layout.cshtml";
}

<style>
    .btn-glam-pink {
        background-color: #E8C2C6;
        color: #4D4C4A;
        border: none;
        font-weight: 600;
        transition: 0.3s ease;
        padding: 12px 20px;
    }

        .btn-glam-pink:hover {
            background-color: #d4a6ab;
            color: #222;
        }

    @@media (max-width: 767.98px) {
        .container {
            padding-left: 15px;
            padding-right: 15px;
            margin-top: 1rem !important;
        }

        .card {
            border: none !important;
            box-shadow: none !important;
            background: transparent !important;
        }

        .card-body {
            padding: 0 !important;
        }

        h2 {
            font-size: 1.5rem;
        }

        .header-row {
            flex-direction: column;
            align-items: flex-start !important;
            gap: 10px;
            margin-bottom: 1.5rem !important;
        }

            .header-row .btn {
                width: 100%;
            }

        .form-control-lg {
            font-size: 16px;
            border-radius: 10px;
        }
    }
</style>

<div class="container mt-4 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">

            <div class="d-flex justify-content-between align-items-center mb-4 header-row">
                <h2 class="mb-0 text-secondary">Zmień hasło</h2>
                <a asp-action="Profile" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Wróć do profilu
                </a>
            </div>

            <div class="card shadow-sm rounded-3">
                <div class="card-body p-4">
                    <form asp-action="ChangePassword" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3 mb-4"></div>

                        <div class="mb-4">
                            <label asp-for="CurrentPassword" class="form-label fw-bold">Obecne hasło</label>
                            <div class="input-group">
                                <span class="input-group-text bg-white"><i class="fas fa-lock text-muted"></i></span>
                                <input asp-for="CurrentPassword" class="form-control form-control-lg" autocomplete="current-password" placeholder="Wpisz stare hasło" />
                            </div>
                            <span asp-validation-for="CurrentPassword" class="text-danger small"></span>
                        </div>

                        <hr class="text-muted my-4" />

                        <div class="mb-3">
                            <label asp-for="NewPassword" class="form-label fw-bold">Nowe hasło</label>
                            <div class="input-group">
                                <span class="input-group-text bg-white"><i class="fas fa-key text-muted"></i></span>
                                <input asp-for="NewPassword" class="form-control form-control-lg" autocomplete="new-password" placeholder="Wpisz nowe hasło" />
                            </div>
                            <span asp-validation-for="NewPassword" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="form-label fw-bold">Powtórz nowe hasło</label>
                            <div class="input-group">
                                <span class="input-group-text bg-white"><i class="fas fa-check-circle text-muted"></i></span>
                                <input asp-for="ConfirmPassword" class="form-control form-control-lg" autocomplete="new-password" placeholder="Powtórz nowe hasło" />
                            </div>
                            <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                        </div>

                        <div class="d-grid mt-5">
                            <button type="submit" class="btn btn-glam-pink btn-lg shadow-sm">
                                <i class="fas fa-save me-2"></i> Zmień hasło
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}